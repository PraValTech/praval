<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_200"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view_category"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_4sdp"
        card_view:cardCornerRadius="4dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_category"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/metro"

                />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <LinearLayout
                    android:id="@+id/lin1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/textview_category_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Sweets"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_16sdp"
                        android:paddingLeft="@dimen/_16sdp"
                        android:textColor="@color/md_orange_700"

                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/textview2_sub_title"
                    android:text="Subtitle lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_16sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_below="@+id/lin1"
                    android:ellipsize="end"
                    android:maxLines="3"
                    />



            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>